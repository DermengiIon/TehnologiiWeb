@using System.Web.Optimization
@model eUseControl.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/UserShared/_Layout.cshtml";
}

<div class="account-pages pb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <a href="/">
                                <span>TanySher</span>
                            </a>
                            <p class="text-muted mb-4 mt-3">Introduce-ți adresa de e-mail și parola pentru a accesa panoul de profil.</p>
                        </div>
                        <script>
                            function onSuccess() {
                                alert("Succes");
                            }
                            function onFailure() {
                                alert("Eșuat");
                            }
                        </script>

                        @using (Ajax.BeginForm("Index", "Login", null, new AjaxOptions
                        {
                            HttpMethod = "POST",
                            UpdateTargetId = "login-form",
                            OnSuccess = "onSuccess",
                            OnFailure = "onFailure"
                        }, new { id = "login-form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.Email)
                                @Html.TextBoxFor(x => x.Email, new
                                {
                                    @class = "form-control",
                                    placeholder = "Introduce-ți adresa de email",
                                    id = "",
                                    name = "email"
                                })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                            <div class="form-group mb-3">
                                @Html.LabelFor(x => x.Password)
                                @Html.TextBoxFor(x => x.Password, new
                                {
                                    @class = "form-control",
                                    placeholder = "Introduce-ți parola",
                                    id = "",
                                    name = "password"
                                })
                            </div>
                            <div class="form-group mb-3">
                                <div class="custom-control custom-checkbox">
                                    @Html.LabelFor(x => x.Remember, new { @class = "custom-control-label"})
                                    @Html.TextBoxFor(x => x.Remember, new
                                    {
                                        @class = "custom-control-input",
                                        placeholder = "Introduce-ți parola",
                                        id = "",
                                        name = "remember",
                                        type = "checkbox"
                                    })
                                </div>
                            </div>

                            <div class="form-group mb-0 text-center">
                                <button class="btn btn-primary btn-block" type="submit"> Autentificare </button>
                            </div>
                        }
                        <div class="text-center">
                            <h5 class="mt-3 text-muted">Autentifică-te cu</h5>
                            <ul class="social-list list-inline mt-3 mb-0">
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                </li>
                            </ul>
                        </div>

                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p> <a href="pages-recoverpw.html" class="text-muted ml-1">Ți-ai uitat parola?</a></p>
                        <p class="text-muted">Nu aveți cont? <a href="@Url.Action("Index","Register")" class="text-primary font-weight-medium ml-1">Înregistrare</a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
<!-- end page -->
