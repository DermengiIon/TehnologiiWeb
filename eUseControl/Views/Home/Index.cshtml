@{
    ViewBag.Title = "Acasa";
    Layout = "~/Views/UserShared/_Layout.cshtml";
}

            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!--Carousel Wrapper-->
                    <div id="ts-carousel" class="carousel slide carousel-fade" data-ride="carousel">
                        <!--Indicators-->
                        <ol class="carousel-indicators">
                            <li data-target="#ts-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#ts-carousel" data-slide-to="1"></li>
                            <li data-target="#ts-carousel" data-slide-to="2"></li>
                        </ol>
                        <!--/.Indicators-->
                        <!--Slides-->
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <div class="view">
                                    <img class="d-block w-100" src="@Url.Content("~/Content/assets/img/ts-slider1-background-img.jpg")"></img>
                                    <div class="mask rgba"></div>
                                </div>
                                <div class="carousel-caption">
                                    <h3 class="h3-responsive">•Hairdo•</h3>
                                    <p>Chișinău • din 2020</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <!--Mask color-->
                                <div class="view">
                                    <img class="d-block w-100" src="@Url.Content("~/Content/assets/img/ts-slider2-background-img.jpg")"></img>
                                    <div class="mask rgba"></div>
                                </div>
                                <div class="carousel-caption">
                                    <h3 class="h3-responsive">•Colors•</h3>
                                    <p>Chișinău • din 2020</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <!--Mask color-->
                                <div class="view">
                                    <img class="d-block w-100" src="@Url.Content("~/Content/assets/img/ts-slider3-background-img.jpg")"></img>
                                    <div class="mask rgba"></div>
                                </div>
                                <div class="carousel-caption">
                                    <h3 class="h3-responsive">•Style•</h3>
                                    <p>Chișinău • din 2020</p>
                                </div>
                            </div>
                        </div>
                        <!--/.Slides-->
                        <!--Controls-->
                        <a class="carousel-control-prev" href="#ts-carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#ts-carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <!--/.Controls-->
                    </div>
                    <!--/.Carousel Wrapper-->
