@using System.Web.Optimization
@model eUseControl.Models.MProducts 
@{
    ViewBag.Title = "Produse";
    Layout = "~/Views/UserShared/_Layout.cshtml";
}

@section PageStyle {
    @Styles.Render("~/bundles/products/css")
}

@section PageScript {
    @Scripts.Render("~/bundles/products/js")
}

<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <!--                         <div class="row">
                                    <div class="col-12">
                                        <div class="page-title-box">
                                            <div class="page-title-right">
                                                <ol class="breadcrumb m-0">
                                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Minton</a></li>
                                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Extras</a></li>
                                                    <li class="breadcrumb-item active">Gallery</li>
                                                </ol>
                                            </div>
                                            <h4 class="page-title">Gallery</h4>
                                        </div>
                                    </div>
                                </div>    -->
        <!-- end page title -->
        <!-- Filter -->
        <div class="row">
            <div class="col-12">
                <div class="text-center filter-menu">
                    <a href="javascript: void(0);" class="filter-menu-item active" data-rel="all">Toate</a>
                    <a href="javascript: void(0);" class="filter-menu-item" data-rel="web">Culoare</a>
                    <a href="javascript: void(0);" class="filter-menu-item" data-rel="graphic">Ingrijirea parului</a>
                </div>
            </div>
        </div>
        <!-- end row-->

        <div class="row filterable-content">
            @foreach (var item in Model.Products)
            {
                <div class="col-sm-6 col-xl-3 filter-item all web illustrator">
                    <div class="gal-box">
                        <a href="@Url.Content(item.ImagePath)" class="image-popup" title="Screenshot-1">
                            <img src="@Url.Content(item.ImagePath)" class="img-fluid" alt="work-thumbnail">
                        </a>
                        <div class="gall-info">
                            <h4 class="font-16 mt-0">@item.Category</h4>
                            <a href="javascript: void(0);">
                                <img src="@Url.Content(item.ImagePath)" alt="user-img" class="rounded-circle" height="24" />
                                <span class="text-muted ml-1">@item.Name</span>
                            </a>
                            <a href="javascript: void(0);" class="gal-like-btn"><i class="mdi mdi-heart-outline text-muted"></i></a>
                        </div> <!-- gallery info -->
                    </div> <!-- end gal-box -->
                </div> <!-- end col -->

            }
        </div>
        <!-- end row -->

    </div> <!-- container -->

</div> <!-- content -->
